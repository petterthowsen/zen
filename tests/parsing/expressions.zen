// Literal expressions
var answer = 42
const PI = 3.14
var zen = true
var nope = false

var title = "Zen Lang!"

// Binary expressions
var plus = 1 + 2
var minus = 5 - 6
var mult = 3 * 4
var divide = 10 / 2

var complex1 = 2 + 3 * 4
var complex2 = (2 + 3) * 4

// Unary expressions
var negative42 = -42
var negated = not true

// Mixed expressions
var result = -5 + plus * 1.5 + myFunc()

// Compound assignments
var x = 5
x += 3      // x = x + 3
x -= 2      // x = x - 2
x *= 4      // x = x * 4
x /= 2      // x = x / 2

// Postfix operators
var i = 0
i++         // i = i + 1
i--         // i = i - 1

// Mixed compound and postfix
var j = 10
j += 5      // j = j + 5
j++         // j = j + 1
j *= 2      // j = j * 2
